<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7D1E0">

    <ProgressBar
        android:id="@+id/Cargando"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progressTint="#673AB7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/scrollView2"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:rotation="180"
                android:scaleType="fitEnd"
                app:srcCompat="@drawable/ellipse_gris" />

            <TextView
                android:id="@+id/tvPerfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="25dp"
                android:fontFamily="@font/roboto"
                android:text="Perfil"
                android:textColor="#444443"
                android:textSize="40sp" />

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="106dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_roundedgrey"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgPerfil"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_margin="5dp"
                    android:layout_marginRight="20dp"
                    app:srcCompat="@drawable/imgba" />

                <LinearLayout
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvNombreUsuario"
                            android:layout_width="182dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto"
                            android:gravity="center"
                            android:text="Nombre"
                            android:textAlignment="textStart"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp" />

                        <ImageButton
                            android:id="@+id/btnPerfil"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_weight="1"
                            android:backgroundTint="#006200EE"
                            app:srcCompat="@drawable/editar_perfil" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="223dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_level"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvNivel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto"
                                android:text="Nivel"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvNumNivel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto"
                                android:text="1"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/pbNivel"
                            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
                            android:layout_width="145dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:progress="40"
                            android:progressBackgroundTint="#FAFAFA"
                            android:progressTint="#D3C1F0" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tvLogros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Logros"
                android:textColor="#444443"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/LogroEstudio1"
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_rounded"
                    android:backgroundTint="#FAFAFA"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/LogroEstudio1">

                    <LinearLayout
                        android:id="@+id/lnCat5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FAFAFA"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView15"
                            android:layout_width="60dp"
                            android:layout_height="80dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/imglogro" />

                        <Space
                            android:layout_width="7dp"
                            android:layout_height="80dp"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="15dp"
                        android:layout_weight="10"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:text="El Gran Estudiante"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:text="Has completado 100 tareas en la categoría de Estudios"
                            android:textAlignment="center"
                            android:textColor="#DA303030" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LogroLaboral1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_rounded"
                    android:backgroundTint="#FAFAFA"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/LogroLaboral1">

                    <LinearLayout
                        android:id="@+id/lnCat47"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FAFAFA"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView65"
                            android:layout_width="60dp"
                            android:layout_height="80dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/imglogro" />

                        <Space
                            android:layout_width="7dp"
                            android:layout_height="80dp"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="15dp"
                        android:layout_weight="10"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:text="Trabajador Exitoso"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:text="Has completado 15 tareas en la categoría de Laboral"
                            android:textAlignment="center"
                            android:textColor="#D9303030" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LogroSalud1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_rounded"
                    android:backgroundTint="#FAFAFA"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/LogroSalud1">

                    <LinearLayout
                        android:id="@+id/lnCat154"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FAFAFA"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView167"
                            android:layout_width="60dp"
                            android:layout_height="80dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/imglogro" />

                        <Space
                            android:layout_width="7dp"
                            android:layout_height="80dp"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="15dp"
                        android:layout_weight="10"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:text="Enfermo"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:text="Has completado la primera tarea en la categoría de Salud"
                            android:textAlignment="center"
                            android:textColor="#D9000000" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LogroSocial1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg_rounded"
                    android:backgroundTint="#FAFAFA"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/LogroSocial1">

                <LinearLayout
                        android:id="@+id/lnCat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FAFAFA"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView7"
                            android:layout_width="60dp"
                            android:layout_height="80dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/imglogro" />

                        <Space
                            android:layout_width="7dp"
                            android:layout_height="80dp"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="15dp"
                        android:layout_weight="10"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:text="Amigable"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:text="Has completado 5 tareas en la categoría de Social"
                            android:textAlignment="center"
                            android:textColor="#D9000000" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="344dp"
                android:layout_height="56dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="50dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btnRegresar"
                    android:layout_width="170dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="#630E0E"
                    android:fontFamily="@font/roboto"
                    android:text="Cerrar Sesión"
                    android:textAllCaps="false"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btnCerrarSesion"
                    android:layout_width="170dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="#302E33"
                    android:fontFamily="@font/roboto"
                    android:text="Regresar"
                    android:textAllCaps="false"
                    android:textSize="16sp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>