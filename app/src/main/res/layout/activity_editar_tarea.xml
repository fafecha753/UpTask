<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7D1E0"
    tools:context=".activity_editarTarea">

    <ProgressBar
        android:id="@+id/Cargando"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvInicioSesion3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45sp"
                android:fontFamily="@font/roboto_medium"
                android:text="Editar Tarea"
                android:textAlignment="center"
                android:textColor="#444343"
                android:textSize="34sp" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="35sp"
                android:background="@drawable/bg_rounded"
                android:orientation="vertical"
                android:paddingLeft="120px"
                android:paddingTop="70px"
                android:paddingRight="120px"
                android:paddingBottom="70px">

                <TextView
                    android:id="@+id/tvNombreTarea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="Nombre de la tarea"
                    android:textAlignment="center"
                    android:textColor="#302E33"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/txtEditNombreTarea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:ems="10"
                    android:maxLength="20"
                    android:fontFamily="@font/roboto"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/tvDescripcionTarea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/roboto"
                    android:text="Descripción de la tarea"
                    android:textAlignment="center"
                    android:textColor="#302E33"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/txtEditDescripcionTarea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:ems="10"
                    android:maxLength="50"
                    android:fontFamily="@font/roboto"
                    android:inputType="textLongMessage" />

                <TextView
                    android:id="@+id/tvFecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/roboto"
                    android:text="Fecha Límite"
                    android:textAlignment="center"
                    android:textColor="#302E33"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/txtEditFecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:ems="10"
                    android:focusable="false"
                    android:fontFamily="@font/roboto"
                    android:inputType="date" />

                <TextView
                    android:id="@+id/tvEditHoraLimite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/roboto"
                    android:text="Hora Límite"
                    android:textAlignment="center"
                    android:textColor="#302E33"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/txtEditHora"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:ems="10"
                    android:focusable="false"
                    android:inputType="time" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="60sp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCategoria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Elegir categoría"
                    android:textAlignment="center"
                    android:textColor="#302E33"
                    android:textSize="24sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:background="#D6D0DF"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btnEditCatUno"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:background="#D6D0DF"
                        app:srcCompat="@drawable/cat1" />

                    <ImageButton
                        android:id="@+id/btnEditCatDos"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:background="#D6D0DF"
                        app:srcCompat="@drawable/cat2" />

                    <ImageButton
                        android:id="@+id/btnEditCatTres"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:background="#D6D0DF"
                        app:srcCompat="@drawable/cat3" />

                    <ImageButton
                        android:id="@+id/btnEditCatCuatro"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:background="#D6D0DF"
                        app:srcCompat="@drawable/cat4" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnRegresarPrincipal"
                    android:layout_width="170dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:backgroundTint="#302E33"
                    android:fontFamily="@font/roboto"
                    android:text="Regresar"
                    android:textAllCaps="false"
                    android:textSize="16sp" />

                <Space
                    android:layout_width="5sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btnGuardarTarea"
                    android:layout_width="170dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:backgroundTint="#0B2B52"
                    android:fontFamily="@font/roboto"
                    android:text="Guardar Tarea"
                    android:textAllCaps="false"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="fitEnd"
                    app:srcCompat="@drawable/ellipse_gris" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>