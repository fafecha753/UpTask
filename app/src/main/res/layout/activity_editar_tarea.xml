<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_degradadoeditarperfil"
    tools:context=".activity_editarTarea">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvInicioSesion3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Editar tarea"
                android:textAlignment="center"
                android:textColor="#444343"
                android:textSize="34sp" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:background="@drawable/bg_rounded"
                android:orientation="vertical"
                android:paddingLeft="120px"
                android:paddingTop="70px"
                android:paddingRight="120px"
                android:paddingBottom="70px">

                <TextView
                    android:id="@+id/tvNombreTarea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="Nombre de la tarea"
                    android:textAlignment="center"
                    android:textColor="#302E33"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/txtEditNombreTarea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="@font/roboto"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/tvDescripcionTarea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/roboto"
                    android:text="Descripción de la tarea"
                    android:textAlignment="center"
                    android:textColor="#302E33"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/txtEditDescripcionTarea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="@font/roboto"
                    android:inputType="textLongMessage" />

                <TextView
                    android:id="@+id/tvFecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/roboto"
                    android:text="Fecha limite"
                    android:textAlignment="center"
                    android:textColor="#302E33"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/txtEditFecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:focusable="false"
                    android:fontFamily="@font/roboto"
                    android:inputType="date" />

                <TextView
                    android:id="@+id/tvEditHoraLimite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hora Limite"
                    android:textAlignment="center"
                    android:textColor="#302E33"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/txtEditHora"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:focusable="false"
                    android:inputType="time" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4sp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Switch
                        android:id="@+id/swEditDiaria"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tarea Diaria"
                        android:thumb="@drawable/common_google_signin_btn_icon_light_normal_background"
                        android:thumbTint="#384570"
                        android:track="@drawable/common_google_signin_btn_text_dark_normal_background"
                        android:trackTint="#D3D3D3 " />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30sp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCategoria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="Elegir categoría"
                    android:textAlignment="center"
                    android:textColor="#302E33"
                    android:textSize="24sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btnCatUno"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:background="#00FFFFFF"
                        app:srcCompat="@drawable/cat1" />

                    <ImageButton
                        android:id="@+id/btnCatDos"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="-5sp"
                        android:layout_weight="0.7"
                        android:background="#00FFFFFF"
                        app:srcCompat="@drawable/cat2" />

                    <ImageButton
                        android:id="@+id/btnCatTres"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="-5sp"
                        android:layout_weight="0.7"
                        android:background="#00FFFFFF"
                        app:srcCompat="@drawable/cat3" />

                    <ImageButton
                        android:id="@+id/btnCatCuatro"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="-5sp"
                        android:layout_weight="0.7"
                        android:background="#00FFFFFF"
                        app:srcCompat="@drawable/cat4" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnRegresarPrincipal"
                    android:layout_width="180dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:backgroundTint="#302E33"
                    android:text="Regresar"
                    android:textAllCaps="false" />

                <Space
                    android:layout_width="10sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btnGuardarTarea"
                    android:layout_width="180dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:backgroundTint="#0B2B52"
                    android:text="Guardar Tarea"
                    android:textAllCaps="false" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="fitEnd"
                    app:srcCompat="@drawable/ellipse_gris" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>